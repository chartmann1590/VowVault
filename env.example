# Email Configuration
# Copy this file to .env and fill in your actual values

# SMTP Settings (for sending emails)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Immich Server Configuration (optional)
# Enable Immich sync to automatically sync all uploads to your Immich server
IMMICH_ENABLED=false
IMMICH_SERVER_URL=https://your-immich-server.com
IMMICH_API_KEY=your-immich-api-key
IMMICH_USER_ID=your-immich-user-id
IMMICH_ALBUM_NAME=Wedding Gallery

# Database
DATABASE_URL=sqlite:///wedding_photos.db

# Flask Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-here

# Public URL for the gallery
PUBLIC_URL=https://your-domain.com

# Security Configuration
# Rate limiting settings
RATE_LIMIT_UPLOAD_MAX=5
RATE_LIMIT_UPLOAD_WINDOW=5
RATE_LIMIT_API_MAX=10
RATE_LIMIT_API_WINDOW=1
RATE_LIMIT_LOGIN_MAX=3
RATE_LIMIT_LOGIN_WINDOW=1

# File upload security
MAX_CONTENT_LENGTH=52428800
ALLOWED_IMAGE_EXTENSIONS=png,jpg,jpeg,gif,webp
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi,webm
MAX_VIDEO_DURATION=15

# Security logging
SECURITY_LOG_RETENTION_DAYS=30
SECURITY_LOG_LEVEL=info

# Admin access (CHANGE THESE IN PRODUCTION!)
ADMIN_KEY=wedding2024
ADMIN_EMAIL=admin@your-domain.com 